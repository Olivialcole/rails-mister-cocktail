<div class="banner" style="background-image: url('https://picsum.photos/g/1440/255');">
  <div class="banner-content">
    <h1>Cocktails</h1>
    <p><%= link_to "Add New", new_cocktail_path %></p>
  </div>
</div>

<div class="container">
  <div class="row">
        <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
          <h2><%= cocktail.name %>
          <%= cl_image_tag cocktail.photo, width: 400, height: 300, crop: :fill %>
          </h2>
          <%= link_to "See Details", cocktail_path(cocktail) %>
      </div>
    </div>
  <% end %>
</div>

